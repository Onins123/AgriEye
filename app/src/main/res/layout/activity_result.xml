<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/agri_light_yellow_green"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ivLogo2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:text="Captured Leaf"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivResultImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEE"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/viewOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDetectionResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palay Detected!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: "
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvConfidenceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android.textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetake"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Retake"
                app:backgroundTint="@color/agri_dark_green"
                app:cornerRadius="28dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnalyze"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Analyze"
                app:backgroundTint="@color/agri_dark_green"
                app:cornerRadius="28dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLogo2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/agrieye_logo" />

</RelativeLayout>
